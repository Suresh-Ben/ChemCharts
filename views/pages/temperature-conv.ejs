<!-- Home page -->

<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>ChemCharts - "Temperature Conversion"</title>
  <link rel="icon" type="image/x-icon" href="css/content/icon.ico">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">

  <link rel="stylesheet" href="styles/requires/nav-bar.css">
  <link rel="stylesheet" href="styles/requires/sidebar-menu.css">
  <link rel="stylesheet" href="styles/page_requires/temperature-conv.css">

</head>

<body>

  <%- include("../requires/nav-bar") -%>
  <%- include("../requires/sidebar-menu") -%>


  <!-- temperature-body -->

  <div class="container temp-body">
    <div class="row align-items-center justify-content-center">

      <div class="col-lg-5 col-md-5 temp-col">
        <h1>Celsius</h1>
        <input class="celsius my-input" placeholder="temprature(°C)" type="number" value="">
      </div>
      <div class="col-lg-5 col-md-5 temp-col">
        <h1>Fahrenheit</h1>
        <input class="fahrenheit my-input" placeholder="temprature(°F)" type="number" value="">
      </div>
      <div class="col-lg-5 col-md-5 temp-col">
        <h1>Kelvin</h1>
        <input class="kelvin my-input" placeholder="temprature(K)" type="number" value="">
      </div>
      <div class="col-lg-5 col-md-5 temp-col">
        <h1>Rankine</h1>
        <input class="rankine my-input" placeholder="temprature(°R)" type="number" value="">
      </div>

    </div>

    <div class="pt-2 d-flex justify-content-center">
      <button class="btn btn-outline-primary mx-2 px-3 py-0 reset">Reset</button>
      <button class="btn btn-outline-primary mx-2 px-3 py-0 convert">Convert</button>
    </div>

  </div>

  <!-- temperature-body -->


  <!-- Scripts -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
  <script src="https://cdn.socket.io/4.5.0/socket.io.min.js"></script>
  <script src="scripts/requires/nav-bar.js"></script>
  <script src="scripts/requires/sidebar-menu.js"></script>
  <script src="scripts/page_requires/temperature-conv.js"></script>

</body>

</html>
